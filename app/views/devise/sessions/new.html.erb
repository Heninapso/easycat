<div class="banner" style="background-image: linear-gradient(-225deg, rgba(255,89,249,0.6) 0%, rgba(61,33,60,0.5) 50%), url(<%= cl_image_path('xmsgxh8wzmqo2vexomos', width: 700, height: 1000) %>)">
<div class="form-container">
<h2>Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email, required: false, autofocus: true %>
          <%= f.input :password, required: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in", class: "button" %>
        </div>
      <% end %>

<%= render "devise/shared/links" %>
</div>
</div>
