

<%= simple_form_for @cat_sitting_offer do |f| %>
  <% if !current_user.first_name %>
    <%=  f.association :user do |c| %>
      <%= c.input :first_name %>
      <%= c.input :last_name %>
    <% end %>
  <% end %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :localisation %>
  <%= f.input :photos, as: :attachinary %>
  <%= f.button :submit, class: "button"%>
<% end %>
