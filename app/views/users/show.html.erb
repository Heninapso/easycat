    <div class="card">
      booking.cat_sitting_offer.title
      booking.cat_sitting_offer.localisation
      booking.start_date
      booking.end_date

        <%= simple_form_for booking do |f| %>
          <%= f.button :submit , "Accept" %>
        <% end %>
    </div>
  <% end %>
    booking.status = "pending"
